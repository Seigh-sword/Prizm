    output("Prizm is mature enough!"),
} else {
    output("Prizm is still developing"),
},

// ===== LOOP UNTIL =====
var counter: int = 0,
loop until (counter > 3) {
    output("Counter: "),
    output(counter),
    counter = counter + 1,
},

// ===== REPEAT FOR LOOP =====
repeat for (i = 1 to 5) {
    output("Iteration: "),
    output(i),
},

// ===== FUNCTION DEFINITION =====
