// ===== BASIC OUTPUT (Built-in) =====
output("Welcome to Prizm Language!"),

// ===== VARIABLE DECLARATIONS WITH TYPES =====
var name: string = "Prizm",
var age: int = 5,
var height: float = 1.75,
var isActive: boolean = true,
var skills: array = ["coding", "design", "optimization"],

// ===== MATH OPERATIONS HEADER =====
